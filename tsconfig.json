{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"declaration": true,
		"outDir": "dist",
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true,
		"lib": [
			"DOM",
			"ES6"
		]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}